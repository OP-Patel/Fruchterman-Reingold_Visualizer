{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Clang build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/play",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/lldb",
      "internalConsoleOptions": "openOnSessionStart",
      "logging": {
        "engineLogging": false
      }
    }
  ]
}
